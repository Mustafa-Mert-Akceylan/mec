<%- include('../static/head.ejs', { bot,user,path})  %>
<div id="content" class="main-content">
    <br><br><br><br><br><br>
    <div class="container">
      <form method="POST">
        <input type="hidden" value="<%= _token %>" name="_token" id="_token">
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Sunucu Profil Linki<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="icon" name="icon" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Sunucu İsmi<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="serverName" name="serverName" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Açıklama<span style="color:red">*</span></label>
              <textarea style="width: 100%;" type="text" class="form-control" id="partnerDesc" name="partnerDesc" placeholder="" required></textarea>
            </div>
         </div>
        <div class="form-group mb-4">
          <label for="inputEmail4">Sunucu Sahibi<span style="color:red">*</span></label>
          <input type="text" class="form-control" id="ownerID" name="ownerID" maxlength="100" placeholder="" required>
        </div>
        <div class="form-group">
          <label for="inputEmail4">Ulaşım Linki<span style="color:red">*</span></label>
          <input type="text" class="form-control" id="Website" name="Website" maxlength="100" placeholder="" required>
      </div>
      <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-save"></i> Onayla</button>
    </form>

<div class="row layout-top-spacing" id="cancel-row">
                

<br><br><br><br><br><br><br><br><br><br><br><br><br>

<script>
    var urlParams = new URLSearchParams(window.location.search);
    if(urlParams.has('success') && urlParams.get('success')){
    Swal.fire({
     icon: 'success',
     title: 'Başarılı...',
     closeOnConfirm: false,
     text: urlParams.get('message')
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = '/admin/partners';
  }
})
    }
    if(urlParams.has('error') && urlParams.get('error')){
    Swal.fire({
     icon: 'error',
     title: 'Oops...',
     text: urlParams.get('message')
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = '/admin/partners';
  }    
})
    }
   </script>
        <%- include('../static/foot.ejs') %>
    </div>